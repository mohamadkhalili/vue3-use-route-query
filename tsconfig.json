{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "Preserve",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}